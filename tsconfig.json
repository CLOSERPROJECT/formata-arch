{
  "extends": "@total-typescript/tsconfig/bundler/dom/app",
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "ESNext"
    ],
    "noUncheckedIndexedAccess": false,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "types": [
      "vite/client",
    ],
    "baseUrl": ".",
    "paths": {
      "$lib": [
        "./src/lib"
      ],
      "$lib/*": [
        "./src/lib/*"
      ],
      "$apps/*": [
        "../*"
      ],
      "$core": [
        "./src/core"
      ],
      "$core/*": [
        "./src/core/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte"
  ],
}